# AcademyOS Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Database Connection
MONGODB_URI=mongodb://localhost:27017/academyos
# For production: mongodb+srv://username:password@cluster.mongodb.net/academyos

# JWT Secret for authentication tokens
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=7d

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (for future notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Frontend URL for CORS
CLIENT_URL=http://localhost:3000

# Admin Default Credentials (for initial setup)
ADMIN_EMAIL=admin@academyos.com
ADMIN_PASSWORD=admin123
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator
